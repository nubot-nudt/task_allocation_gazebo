//#define RTDB_INI "../config/rtdb.ini"
#define RTDB_CONF "@RTDB_Config_FILE@"
#define RTDB_INI "@RTDB_INI_FILE@"
#define RTDB_USER_H "@RTDB_USER_H_FILE@"

